<Window x:Class="TournamentsBDProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentsBDProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Window.Background>
        <ImageBrush  Stretch="UniformToFill" ImageSource="/fon.jpg"/>
    </Window.Background>
    <StackPanel>
        <Label Foreground="White" Background="Black" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center">Выберите таблицу:</Label>
        <Menu Width="Auto" Height="Auto" HorizontalAlignment="Center">
            <MenuItem Header="Игроки" FontSize="30" Background="Purple" Foreground="White" Margin="5" Click="Players_click"></MenuItem>
            <MenuItem Header="Турниры" FontSize="30" Background="Purple" Foreground="White" Margin="5" Click="Tournaments_click"></MenuItem>
            <MenuItem Header="Команды" FontSize="30" Background="Purple" Foreground="White" Margin="5" Click="Teams_click"></MenuItem>
        </Menu>
        <Label HorizontalAlignment="Center" Margin="100" FontSize="36" FontFamily="Calibri" FontWeight="Bold" Foreground="White" Background="Black">Площадка для проведения турниров</Label>
    </StackPanel>
</Window>